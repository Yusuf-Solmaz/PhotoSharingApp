<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="25dp"
    >

    <TextView
        android:id="@+id/recyeclerViewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:text="Name"
        android:textColor="#7636E8"
        android:textSize="19sp"></TextView>

    <ImageView
        android:id="@+id/recyeclerViewImage"
        android:layout_width="350dp"
        android:layout_height="250dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="2dp"></ImageView>

    <TextView
        android:textColor="#7636E8"
        android:textSize="18sp"
        android:layout_marginLeft="30dp"
        android:id="@+id/recyeclerViewComment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Comment"></TextView>
</LinearLayout>